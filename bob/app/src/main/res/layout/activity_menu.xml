<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.yeeun.bob.MenuActivity">
    <!--android:background="@drawable/blank2"-->

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="한법짝"
            android:textStyle="bold"
            android:textSize="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight=".4"
        android:layout_height="wrap_content">

        <Button
            android:padding="10dp"
            android:gravity="fill_vertical"
            android:text="채팅"
            android:textStyle="bold"
            android:textSize="40dp"
            android:id="@+id/chatbtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#e7d7c6"
            android:onClick="chatClick" />

        <Button
            android:padding="10dp"
            android:gravity="fill_vertical"
            android:text="전문가등록"
            android:textStyle="bold"
            android:textSize="40dp"
            android:id="@+id/registerbtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#dbc3aa"
            android:onClick="registerClick" />

        <Button
            android:padding="10dp"
            android:gravity="fill_vertical"
            android:text="안내"
            android:textStyle="bold"
            android:textSize="40dp"
            android:id="@+id/annaebtn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#d0af8d"
            android:onClick="annaeClick" />

    </LinearLayout>
</LinearLayout>
